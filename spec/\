require "../lib/contact_management_user_interface"
require "../lib/contact_management"
require "rspec"

class FakeStdOut

attr_accessor :output

def initialize
describe InterfaceUser do
  before do
    $stdout = FakeStdOut.new
  end

  after do
    $stdout = STDOUT
  end

  it 'prints current list' do
    user_choice = InterfaceUser.new
    expect(user_choice.list_my_contacts).to eq("0"+" " "Emily Zheng"+"\n"+ "1"+" "+" Kim Strong"+"\n")
  end
end
